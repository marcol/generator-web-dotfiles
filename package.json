{
  "name": "generator-web-dotfiles",
  "version": "2.1.2",
  "description": "Add dofiles for your JavaScript/Web projects. It will setup linting for js, css, markdown, html. Add validation to commits and githooks for testing and linting.",
  "keywords": [
    "CSS",
    "HTML",
    "JavaScript",
    "js",
    "git",
    "ci",
    "quick",
    "simple",
    "web",
    "dotfiles",
    ".eslint",
    ".gitignore",
    ".stylelint",
    "yeoman-generator",
    "yo",
    "generator",
    "yeoman"
  ],
  "scripts": {
    "lint": "yarn lint:js && yarn lint:md",
    "lint:js": "eslint",
    "lint:md": "remark . --quiet",
    "test": "yarn test:unit",
    "test:unit": "jest"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint",
      "pre-push": "yarn test"
    }
  },
  "bugs": "https://github.com/marcol/generator-web-dotfiles/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcol/generator-web-dotfiles.git"
  },
  "license": "ISC",
  "files": [
    "generators"
  ],
  "dependencies": {
    "sugar-chalk": "^1.6.2",
    "yeoman-generator": "^4.12.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "eslint": "^7.17.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-html": "^6.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-markdown": "^1.0.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "remark-cli": "^9.0.0",
    "remark-lint": "^8.0.0",
    "remark-preset-lint-markdown-style-guide": "^4.0.0",
    "rimraf": "^3.0.2",
    "string-sanitizer": "^1.1.1",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^4.0.0"
  },
  "resolutions": {
    "yeoman-generator/**/axios": "^0.21.1"
  }
}
