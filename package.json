{
  "name": "generator-web-dotfiles",
  "version": "3.0.0",
  "private": false,
  "description": "Add dofiles for your JavaScript/Web projects. It will setup linting for js, css, markdown, html. Add validation to commits and githooks for testing and linting.",
  "keywords": [
    "CSS",
    "HTML",
    "JavaScript",
    "js",
    "git",
    "ci",
    "quick",
    "simple",
    "web",
    "dotfiles",
    ".eslint",
    ".gitignore",
    ".stylelint",
    "yeoman-generator",
    "yo",
    "generator",
    "yeoman"
  ],
  "scripts": {
    "release": "node ./scripts/release.js",
    "lint": "yarn lint:js && yarn lint:md",
    "lint:js": "eslint",
    "lint:md": "remark . --quiet",
    "test": "yarn test:uni",
    "test:unit": "jest",
    "_postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "bugs": "https://github.com/marcol/generator-web-dotfiles/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcol/generator-web-dotfiles.git"
  },
  "license": "ISC",
  "files": [
    "generators"
  ],
  "dependencies": {
    "deep-extend": "^0.6.0",
    "sugar-chalk": "^1.6.5",
    "yeoman-generator": "^5.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "eslint": "^7.26.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-markdown": "^2.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "ora": "^5.4.0",
    "pinst": "^2.1.6",
    "remark-cli": "^9.0.0",
    "remark-lint": "^8.0.0",
    "remark-preset-lint-markdown-style-guide": "^4.0.0",
    "rimraf": "^3.0.2",
    "string-sanitizer": "^1.1.1",
    "yeoman-assert": "^3.1.1",
    "yeoman-environment": "^3.4.0",
    "yeoman-test": "^6.1.0"
  },
  "resolutions": {
    "**/trim": "^0.0.3"
  }
}
